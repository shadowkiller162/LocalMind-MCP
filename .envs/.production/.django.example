# General
# ------------------------------------------------------------------------------
# DJANGO_READ_DOT_ENV_FILE=True
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=your_production_secret_key_here
DJANGO_ADMIN_URL=your_admin_url_here/
DJANGO_ALLOWED_HOSTS=.yourdomain.com

# Security
# ------------------------------------------------------------------------------
# TIP: better off using DNS, however, redirect is OK too
DJANGO_SECURE_SSL_REDIRECT=True

# Email
# ------------------------------------------------------------------------------
DJANGO_SERVER_EMAIL=your_email@yourdomain.com


# AWS
# ------------------------------------------------------------------------------
DJANGO_AWS_ACCESS_KEY_ID=your_aws_access_key_id
DJANGO_AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
DJANGO_AWS_STORAGE_BUCKET_NAME=your_bucket_name

# django-allauth
# ------------------------------------------------------------------------------
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True

# Gunicorn
# ------------------------------------------------------------------------------
WEB_CONCURRENCY=4


# Redis
# ------------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# Celery
# ------------------------------------------------------------------------------

# Flower
CELERY_FLOWER_USER=your_flower_user
CELERY_FLOWER_PASSWORD=your_flower_password